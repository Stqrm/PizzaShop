<h2>Hello from Pizza Shop!</h2>
    <div class="row">
        
        <% @products.each do |p| %>
        <div class="col-md-3">
            <div>
                <%= p.title %>
            </div>
            <div>
                <img src="<%= p.path_to_image %>" />
            </div>
            <div>
                <%= p.description %>
            </div>
            <div>
                Price: <%= p.price %> rub.
            </div>
            <div>
                <button class="btn btn-sm btn-success" onClick="addToCart(<%= p.id %>)">Add to cart</button>
            </div>
        </div>
        <% end %>

    </div>
    <br />
    <br />

    <button class="btn btn-primary" onClick="something()">Click me!</button>
    
    <script type="text/javascript">

    $(function() {
        
        updateOrdersInput();
    

    });

    </script>